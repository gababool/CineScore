<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@css/Backgrounds.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinescore.controller.MainViewController">
   <children>
      <Label fx:id="titleLabel" layoutX="26.0" prefHeight="149.0" prefWidth="333.0" stylesheets="@css/LargeItems.css" text="CineScore" />
      <Label fx:id="loggedInUser" layoutX="31.0" layoutY="135.0" stylesheets="@css/SmallItems.css" text="Logged in as: &lt;User&gt;" />
      <Button fx:id="friendsButton" layoutX="547.0" layoutY="88.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="Friends" />
      <Button fx:id="myAccountButton" layoutX="547.0" layoutY="28.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="My Account" />
      <TableView fx:id="resultsTable" layoutX="441.0" layoutY="285.0" prefHeight="242.0" prefWidth="423.0" stylesheets="@css/SmallItems.css">
        <columns>
          <TableColumn fx:id="titleColumn" editable="false" prefWidth="252.0" resizable="false" text="Title" />
            <TableColumn fx:id="avgRatingColumn" editable="false" prefWidth="88.0" resizable="false" text="Avg. Rating" />
            <TableColumn fx:id="myRatingColumn" editable="false" prefWidth="81.0" resizable="false" text="My Rating" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TextField fx:id="searchField" layoutX="441.0" layoutY="233.0" prefHeight="44.0" prefWidth="321.0" stylesheets="@css/SmallItems.css" />
      <Label layoutX="441.0" layoutY="201.0" stylesheets="@css/SmallItems.css" text="Search by title or director...">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <CheckBox fx:id="movieCheckbox" layoutX="788.0" layoutY="233.0" mnemonicParsing="false" stylesheets="@css/SmallItems.css" text="Movie" textFill="WHITE">
         <font>
            <Font name="Eras Demi ITC" size="12.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="tvCheckbox" layoutX="788.0" layoutY="255.0" mnemonicParsing="false" stylesheets="@css/SmallItems.css" text="TV-series" textFill="WHITE">
         <font>
            <Font name="Eras Demi ITC" size="12.0" />
         </font>
      </CheckBox>
      <Button fx:id="rateMenuButton" layoutX="-9.0" layoutY="203.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="Rate a movie or TV-series">
         <font>
            <Font size="38.0" />
         </font>
      </Button>
      <Button fx:id="myRatingsMenuButton" layoutX="-9.0" layoutY="286.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="My Ratings" />
      <Button fx:id="watchlistMenuButton" layoutX="-9.0" layoutY="368.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="Watchlist" />
      <Button fx:id="logoutButton" layoutX="-9.0" layoutY="451.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="368.0" stylesheets="@css/SmallItems.css" text="Log Out" />
      <Button fx:id="searchButton" layoutX="716.0" layoutY="233.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="64.0" stylesheets="@css/SmallItems.css" text="Enter" />
   </children>
</AnchorPane>
